generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Block {
  id    Int    @id @default(autoincrement())
  title String
  code  String
  user   User @relation(fields: [userId], references: [id])
  userId Int   
}

model User {
  id    Int    @id @default(autoincrement())
  username     String @unique
  password     String
  role         String @default("user")
  blocks       Block[]
}